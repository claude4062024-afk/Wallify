---
/**
 * Header Component
 * Site header with logo and optional navigation
 */

import type { SiteConfig } from '../lib/supabase';
import { getContrastColor } from '../lib/utils';

interface Props {
  config: SiteConfig;
}

const { config } = Astro.props;
const contrastColor = getContrastColor(config.primary_color);
---

<header class="site-header">
  <div class="header-container">
    <div class="brand">
      {config.logo_url ? (
        <img 
          src={config.logo_url} 
          alt={`${config.company_name} logo`}
          class="logo"
          width="120"
          height="40"
        />
      ) : (
        <span class="company-name">{config.company_name}</span>
      )}
    </div>

    {config.header_text && (
      <p class="header-text">{config.header_text}</p>
    )}
  </div>
</header>

<style define:vars={{ primaryColor: config.primary_color, contrastColor }}>
  .site-header {
    background: var(--primaryColor);
    color: var(--contrastColor);
    padding: 1.5rem 0;
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    text-align: center;
  }

  @media (min-width: 640px) {
    .header-container {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .brand {
    display: flex;
    align-items: center;
  }

  .logo {
    height: 40px;
    width: auto;
    object-fit: contain;
  }

  .company-name {
    font-size: 1.5rem;
    font-weight: 700;
  }

  .header-text {
    margin: 0;
    font-size: 0.875rem;
    opacity: 0.9;
  }
</style>
